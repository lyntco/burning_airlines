!!!
%html
  %head
    %title BurningAirlines
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %nav
      %ul{:class => "nav nav-tabs", :role =>"tablist"}
        %li.title INFERNO SKIES
        - if @current_user
          %li.user= @current_user.username
          %li= link_to( 'Airplanes', '#airplanes' )
          %li= link_to( 'Flights', '#flights' )
          %li= link_to( 'Reservations', '#reservations' )
          %li= link_to( 'logout', login_path, :method => :delete )
        - else
          %li= link_to( 'login', login_path )
          %li= link_to( 'Sign up', new_user_path )
    = yield